@page "/yorooms"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject yoko.Data.ApplicationDbContext DB
@using yoko.Data

<PageTitle>Index</PageTitle>

<h1>Index</h1>
<AuthorizeView Roles="Admin">
     <Authorized>
        <p>
            <a href="yorooms/create">Create New</a>
        </p>
    </Authorized>
</AuthorizeView>

<QuickGrid Class="table" Items="DB.YoRooms">
    <PropertyColumn Property="yoroom => yoroom.RoomNumber" />
    <PropertyColumn Property="yoroom => yoroom.CostForNight" />
    <PropertyColumn Property="yoroom => yoroom.RoomType" />
    <PropertyColumn Property="yoroom => yoroom.RoomStatus" />

    <TemplateColumn Context="yoroom">
        <AuthorizeView Roles="Admin">
            <Authorized>
        <a href="@($"yorooms/edit?id={yoroom.Id}")">Edit</a> |
            </Authorized>
        </AuthorizeView>
        <a href="@($"yorooms/details?id={yoroom.Id}")">Details</a>
         <AuthorizeView Roles="Admin">
            <Authorized>
        | <a href="@($"yorooms/delete?id={yoroom.Id}")">Delete</a>
            </Authorized>
        </AuthorizeView>
    </TemplateColumn>
</QuickGrid>
