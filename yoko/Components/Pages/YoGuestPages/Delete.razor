@page "/yoguests/delete"
@inject yoko.Data.ApplicationDbContext DB
@using yoko.Data
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>YoGuest</h4>
    <hr />
    @if (yoguest is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">PassportNumber</dt>
            <dd class="col-sm-10">@yoguest.PassportNumber</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Residence</dt>
            <dd class="col-sm-10">@yoguest.Residence</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@yoguest.UserId</dd>
        </dl>
        <EditForm method="post" Model="yoguest" OnValidSubmit="DeleteYoGuest" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(yoguest is null)">Delete</button> |
            <a href="/yoguests">Back to List</a>
        </EditForm>
    }
</div>

@code {
    YoGuest? yoguest;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        yoguest = await DB.YoGuests.FirstOrDefaultAsync(m => m.Id == Id);

        if (yoguest is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteYoGuest()
    {
        DB.YoGuests.Remove(yoguest!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/yoguests");
    }
}
